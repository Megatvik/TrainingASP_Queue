@model IEnumerable<Queue.Models.QueryView>

<div class="row text-center">
    @using (Html.BeginForm("Create", "Admin"))
    {
        <div class="row text-center h3">Новый запрос</div>
        <div style="height:10px"></div>
        <div>
            @Html.TextBox("name")
            &nbsp;&nbsp;
           <input class="btn" type="submit" value="Создать" />
        </div>
        <div style="height:10px"></div>
    }
</div>
<table class="table" style="">
    
    <tr>
        <th colspan="4"><h4 class="text-left">Доступные запросы</h4></th>
    </tr>
    <tr>
        <th>Название</th>
        <th>Подписано экспертов</th>
        <th>Размер очереди</th>
        <th>Вне очереди</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Experts</td>
            <td>@item.QueueCount</td>
            <td>@item.SubQueueCount</td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Admin", new { QID = item.ID }, null)
            </td>
        </tr>
    }
</table>

